<resources>

    <style name="Theme.ImproveVocabulary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand -->
        <item name="colorPrimary">@color/orange</item>
        <!-- Secondary brand -->
        <item name="colorSecondary">@color/orange</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/status_bar_light</item>
        <!-- Background -->
        <item name="android:colorBackground">@color/background_light</item>
        <!-- Text -->
        <item name="android:textColor">@color/text_dark</item>
        <!-- Font -->
        <item name="fontFamily">@font/roboto</item>

        <item name="android:forceDarkAllowed">false</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>


    <style name="neumorph_CardButton" parent="@style/Widget.Neumorph.Button">
        <item name="neumorph_lightSource">leftTop</item>
        <item name="neumorph_shadowColorLight">@color/light_shadow_on_light_theme</item>
        <item name="neumorph_shadowColorDark">@color/dark_shadow_on_light_theme</item>
        <item name="neumorph_backgroundColor">@color/background_button_on_light_theme</item>
    </style>

    <style name="big_gradient_background">
        <item name="android:background">@drawable/big_light_gradient</item>
    </style>

    <style name="little_gradient_background">
        <item name="android:background">@drawable/little_light_gradient</item>
    </style>

    <style name="additional_menu">
        <item name="cardBackgroundColor">@color/additional_background_light</item>
        <item name="strokeColor">@color/background_additional_view_stroke_on_light_theme</item>
    </style>

    <style name="additional_button" parent="@style/Widget.Neumorph.Button">
        <item name="neumorph_backgroundColor">@color/background_little_btn_on_light_theme</item>
        <item name="neumorph_shadowColorLight">@color/light_little_shadow_on_light_theme</item>
        <item name="neumorph_shadowColorDark">@color/dark_little_shadow_on_light_theme</item>
    </style>

    <style name="little_button"  parent="@style/Widget.Neumorph.ImageButton">
        <item name="neumorph_backgroundColor">@color/background_little_btn_on_light_theme</item>
        <item name="neumorph_shadowColorLight">@color/light_little_shadow_on_light_theme</item>
        <item name="neumorph_shadowColorDark">@color/dark_little_shadow_on_light_theme</item>
        <item name="neumorph_shadowElevation">4dp</item>
    </style>

    <style name="add_button_shape">
        <item name="neumorph_cornerSize">4dp</item>
    </style>

    <style name="edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

</resources>