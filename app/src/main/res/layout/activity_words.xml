<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.wordList.WordsActivity">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_header"
        android:name="com.example.improvevocabulary.presentation.listHeader.ListHeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--
      android:name="com.example.improvevocabulary.presentation.lists.baseList.WordListFragment"
    -->

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_word_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fcv_header" />


</androidx.constraintlayout.widget.ConstraintLayout>